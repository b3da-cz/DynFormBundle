{% extends 'b3daDynFormBundle::base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body">
            <h3>{{ 'dynForm.heading.formFieldCreate' | trans }}</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_row(form.label) }}
            {{ form_row(form.type) }}
            {{ form_row(form.required) }}
            <div class="form-group" id="dynForm_rowChoiceAdd">
                <label for="dynForm_choiceAdd" class="col-sm-2 control-label">
                    {{ 'dynForm.buttonChoice.add' | trans }}
                </label>
                <div class="col-sm-10">
                    <button id="dynForm_choiceAdd" class="btn btn-default">
                        {{ 'dynForm.label.add' | trans }}
                    </button>
                </div>
            </div>
            <div id="dynForm_choiceList"></div>
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}